<schemalist>
  <schema id="de.haecker-felix.gradio" path="/de/haecker-felix/gradio/" gettext-domain="gradio">
    <key name="use-grid-view" type="b">
      <default>true</default>
      <summary>Show the stations as a grid view</summary>
    </key>

    <key name="only-show-working-stations" type="b">
      <default>true</default>
      <summary>Only show working radio stations</summary>
    </key>

    <key name="use-dark-design" type="b">
      <default>false</default>
      <summary>Dark design of the user interface</summary>
    </key>

    <key name="load-pictures" type="b">
      <default>true</default>
      <summary>Show stations icons or not.</summary>
    </key>

    <key name="enable-mpris" type="b">
      <default>true</default>
      <summary>MPRIS support</summary>
    </key>

    <key name="enable-background-playback" type="b">
      <default>true</default>
      <summary>Close window to tray</summary>
    </key>

    <key name="close-to-tray" type="b">
      <default>false</default>
      <summary>Close window to tray</summary>
    </key>

    <key name="show-notifications" type="b">
      <default>false</default>
      <summary>Show notifications</summary>
    </key>

    <key name="volume-position" type="d">
      <default>0.99</default>
      <summary>Volume position</summary>
    </key>

    <key name="window-height" type="i">
      <default>500</default>
      <summary>Height of the window</summary>
    </key>

    <key name="window-width" type="i">
      <default>870</default>
      <summary>Width of the window</summary>
    </key>

    <key name="show-languages-category" type="b">
      <default>true</default>
      <summary>Show languages in discover tab</summary>
    </key>

    <key name="show-codecs-category" type="b">
      <default>false</default>
      <summary>Show codecs in discover tab</summary>
    </key>

    <key name="show-countries-category" type="b">
      <default>true</default>
      <summary>Show countries in discover tab</summary>
    </key>

    <key name="show-tags-category" type="b">
      <default>true</default>
      <summary>Show tags in discover tab</summary>
    </key>

    <key name="show-states-category" type="b">
      <default>true</default>
      <summary>Show states in discover tab</summary>
    </key>

    <key name="resume-playback-on-startup" type="b">
      <default>false</default>
      <summary>Resume Playback On Startup</summary>
    </key>

    <key name="previous-station" type="i">
      <default>0</default>
      <summary>The last played station</summary>
    </key>
  </schema>
</schemalist>
